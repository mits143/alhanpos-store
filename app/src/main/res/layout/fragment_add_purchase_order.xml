<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddPurchaseOrderFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvAddPurchaseOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/add_purchase"
                        android:textAllCaps="true"
                        android:textColor="@color/btnColor"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/supplier"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <Spinner
                                android:id="@+id/spinSupplier"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/supplier"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/reference_no"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/edtRefNO"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/reference_no"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/purchase_date"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/edtDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/purchase_date"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/purchase_status"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <Spinner
                                android:id="@+id/spinStatus"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:entries="@array/orderStatuses"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/purchase_status"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/business_location"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <Spinner
                                android:id="@+id/spinLocation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/business_location"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/attach_document"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/edtDoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/attach_document"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/pay_term"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtTerm"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/border"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="5"
                                    android:imeOptions="actionNext"
                                    android:maxLines="1"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/fontColor3"
                                    android:textColorHint="@color/fontColor3"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="0dp" />

                                <Spinner
                                    android:id="@+id/spinTerm"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/border"
                                    android:entries="@array/term"
                                    android:fontFamily="@font/poppins_medium"
                                    android:imeOptions="actionNext"
                                    android:maxLines="1"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/fontColor3"
                                    android:textColorHint="@color/fontColor3"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/shipping_details"
                            android:textColor="@color/fontColor2"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/edtShippingDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/shipping_details"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/additional_shipping_charges"
                            android:textColor="@color/fontColor2"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/edtShippingCharges"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="0"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtProceed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/btn_bkg"
                        android:focusable="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/save"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvScanAddProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/cvAddPurchaseOrder">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/scan_for_add_product"
                        android:textAllCaps="true"
                        android:textColor="@color/btnColor"
                        android:textSize="@dimen/_12ssp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/border">

                            <ImageView
                                android:id="@+id/imgScan"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_center_focus_weak_24px" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border">

                            <Spinner
                                android:id="@+id/spinnerProduct"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/border">

                            <ImageView
                                android:id="@+id/imgAdd1"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/group_3012" />
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvProductInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="gone"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/cvScanAddProduct">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <com.alhanpos.store.util.TextViewDrawableSize
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_arrow_drop_down_24px_side"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/product_information"
                        android:textAllCaps="true"
                        android:textColor="@color/btnColor"
                        android:textSize="@dimen/_12ssp" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F000000"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_100sdp"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loader.json"
        app:lottie_loop="true" />
</androidx.constraintlayout.widget.ConstraintLayout>