<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddProductFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/add_new_product"
                        android:textAllCaps="true"
                        android:textColor="@color/btnColor"
                        android:textSize="@dimen/_10ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/product_name"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/edtProductName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/product_name"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/sku"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/spinSKU"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/sku"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/quantity"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/spinQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:inputType="number"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/quantity"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/unit"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <Spinner
                                android:id="@+id/spinUnit"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/unit"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/brand"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <Spinner
                                android:id="@+id/spinBrand"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/brand"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/category"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <Spinner
                                android:id="@+id/spinCategory"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/category"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/tax"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/spinTax"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/tax"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/product_price"
                                android:textColor="@color/fontColor2"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/spinPrice"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border"
                                android:inputType="number"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="@string/product_price"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/fontColor3"
                                android:textColorHint="@color/fontColor3"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtProceed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/btn_bkg"
                        android:focusable="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/save"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F000000"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_100sdp"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loader.json"
        app:lottie_loop="true" />
</androidx.constraintlayout.widget.ConstraintLayout>